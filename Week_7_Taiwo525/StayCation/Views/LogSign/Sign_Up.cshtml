@model StayCation.Models.Customers

<!-- Font Icon -->
<link rel="stylesheet" href="~/css/stylelsign.css" asp-append-version="true" />

<!-- Main css -->
<link rel="stylesheet" href="css/style.css">


<div class="main">


    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>

                    <form action="@Url.Action("Sign_Up","LogSign")" method="post" class="register-form" id="register-form">
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            @Html.TextBoxFor(model => model.Name, new{@class = "form-control",  placeholder="Full Name", required = "required"})
                            @*<input type="text" name="name" id="name" placeholder="Your Name" />*@
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            @Html.TextBoxFor(model => model.Email, new{@class = "form-control", placeholder="Your Email", required = "required"})

                           @*<input type="email" name="email" id="email" placeholder="Your Email" />*@
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            @Html.TextBoxFor(model => model.PassWord, new{@class = "form-control", type="password",placeholder="Password", required = "required"})

                            @*<input type="password" name="pass" id="pass" placeholder="Password" />*@
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                            @Html.TextBoxFor(model => model.RepeatPassword, new{@class = "form-control", type="password", placeholder="Repeat your password", required = "required"})

                            @*<input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password" />*@
                        </div>
                        @*<div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div>*@
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        </div>
                    </form>
                </div>
                @*<div class="signup">
                    <figure><img src="img/Login.jpg" alt="Login image"></figure>
                    <a href="#" class="signup-image-link">I am already member</a>
                </div>*@
            </div>
        </div>
    </section>
</div>
    <!-- JS -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="js/main.js"></script>
